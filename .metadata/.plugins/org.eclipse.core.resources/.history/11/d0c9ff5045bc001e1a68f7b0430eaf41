package j07_반복.랜덤;

import java.util.Scanner;
import java.util.UUID;

public class UUID2 {

	public static void main(String[] args) {
		
	
	/*
	 * 
	 * 강아지1_UUID.jpg
	 * 
	 * 이미지 첨부 : 강아지1.jpg
	 * 저장된 이미지 : 강아지1_UUID.jpg
	 * 다운시 이미지명: 강아지1.jpg
	 * 
	 * 
	 * 
	 */		 
		Scanner sc = new Scanner(System.in);
		String savePhoto = null;
		String UUIDsavePhoto = null;
		String result = null;
		String UUID2 = null;
		
         UUID2 = UUID.randomUUID().toString();

		System.out.print(" 이미지 첨부 : ");
		savePhoto = sc.next();
		
		System.out.println(savePhoto + "_"+UUID.randomUUID());
		result = UUIDsavePhoto.replaceAll(".",UUID2+".jpg" );
		System.out.print(" 저장된 이미지 : ");
		System.out.println(result);
		
		System.out.println("다운시 이미지명 :");
		System.out.println(savePhoto);
		
		
		
	}

}
