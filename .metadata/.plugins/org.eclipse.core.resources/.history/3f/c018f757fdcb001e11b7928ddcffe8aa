		 */
		
		Scanner sc = new Scanner(System.in);
		
		ArrayList<User> list = new ArrayList<User>();
		
//		 * 메뉴선택 1
//		 * 
//		 * 아이디 : gildong
//		 * 비밀번호 : 1234
//		 * 이름: 홍길동
