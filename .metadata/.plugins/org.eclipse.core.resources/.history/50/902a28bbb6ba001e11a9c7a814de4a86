package j06_조건;

import java.util.Scanner;

public class If4 {

	public static void main(String[] args) {
		
		/*
		 * 사분면
		 * 
		 * x값을 입력하시오 : 3
		 * y값을 입력하시오 :-2
		 * 
		 * x또는 y중에 하나라도 0이면 4사분면으로 보내시오
		 * 
		 * x양 y 양 1사분면 
		 * x양 y음 4사분면
		 * x음 y양 2사분면
		 * x가 음 y음 3사분면
		 */
		
		int x , y;
		Scanner sc = new Scanner(System.in);
		String result = null;
		System.out.println("x의 값을 입력하시오 :");
		x = sc.nextInt();
		System.out.println("y의 값을 입력하시오 :");
		y=sc.nextInt();
		if(x==0 || y == 0) {
			result = "제 4사분면";
		}
		else if(x > 0 && y > 0) {
			result ="제 1사분면";
		}
		else if(x > 0 && y < 0) {
			result ="제 4사분면";
		}
		else if(x < 0 && y > 0) {
			result ="제 2사분면";
		}
		else {
			result ="제 3사분면";
		}
		
		System.out.println(result+"입니다.");
	}

}
